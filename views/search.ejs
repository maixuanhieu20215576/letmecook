      </div>
            <input type="hidden" id="searchType" name="searchType">
            <input type="hidden" id="timeFilter" name="timeFilter">
            <input type="hidden" id="numberFilter" name="numberFilter">
      </div>
      </div>
      </div>
    
    
            
    </body>
    <%- include('layouts/footer'); -%>
    <%- include('layouts/scripts'); -%>
