<!DOCTYPE html>
<html lang="en">
    <%- include('layouts/header') -%>
    <body>
        <%- include('layouts/navbar') -%>
        <!-- Page Header-->
        <header class="masthead" style="background-image: url('../img/signin.jpg')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="page-heading">
                            <h1>Đăng nhập</h1>
                            <span class="subheading">Để có một trải nghiệm trọn vẹn! </span>
                        </div>
                    </div>
                </div>
            </div>
        </header>
        <!-- Main Content-->
        <div class="container">
            <div class="row">
              <div class="col-lg-5 col-md-10 mx-auto">
            <form action="/users/login" method="POST" enctype="multipart/form-data">
            <div class="control-group">
            <div class="form-group floating-label-form-group controls" style="margin-bottom: 3vh ;">
            <label>Tên đăng nhập</label>
            <input type="text" class="form-control" placeholder="Username" id="username" name='username' required>
            </div>
            </div>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                <label>Mật khẩu</label>
                <input type="password" class="form-control" placeholder="Password" id="password" name='password'required>
                </div>
                </div>

                <% if (err == 1) {%>
                    <div style="padding-top: 2vh  ;">
                <h6 style="color: red; font-weight: lighter;"> Sai tên đăng nhập hoặc mật khẩu</h6>
            </div>
                <% } %>
         
         
            <div class="form-group" style="padding-top: 2vh;">
            <button type="submit" class="btn btn-primary" id="sendMessageButton">Đăng nhập</button>
            </div>
        <!-- Footer-->
        <%- include('layouts/footer') -%>
        <!-- Bootstrap core JS-->
        <%- include('layouts/scripts') -%>
    </body>
</html>
